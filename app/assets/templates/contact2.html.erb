<div>
  <div class="row container-2" style="background: #8fb5d7; padding: 0px 10px;">
    <div class="col-md-7 home-info">
      <h1>Contact Us</h1>
      <h3>Fill out form below, and we'll respond via email.</h3>     
      <!-- BEGIN FORM-->             
      <form class="form-horizontal" name="contactForm" ng-submit="submitForm()" novalidate>
        <div class="form-group" ng-class="{ 'has-error': contactForm.name.$touched && contactForm.name.$invalid }">
          <label for="name" class="col-sm-2 control-label">Name</label>
          <div class="col-sm-10">
            <input type="text" name="name" class="form-control" ng-model="formData.name" minlength="2" maxlength="20" required>
              <div ng-messages="contactForm.name.$error" class="my-messages">
                <p ng-message="minlength" class="message">Your name is too short.</p>
                <p ng-message="maxlength" class="message">Your name is too long.</p>
                <p ng-message="required" class="message">Please provide your name.</p>
              </div>
          </div>
        </div>        
        <div class="form-group" ng-class="{ 'has-error': contactForm.email.$dirty && contactForm.email.$invalid }">
          <label for="email" class="col-sm-2 control-label">E-mail</label>
          <div class="col-sm-10">
            <input type="email" name="email" class="form-control" ng-model="formData.email" ng-pattern="/^[-a-z0-9~!$%^&*_=+}{\'?]+(\.[-a-z0-9~!$%^&*_=+}{\'?]+)*@([a-z0-9_][-a-z0-9_]*(\.[-a-z0-9_]+)*\.(aero|arpa|biz|com|coop|edu|gov|info|int|mil|museum|name|net|org|pro|travel|mobi|[a-z][a-z])|([0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}))(:[0-9]{1,5})?$/i" required>
              <div ng-messages="contactForm.email.$error" class="my-messages">
                <p ng-message="pattern" class="message">Your email is invalid.</p>
                <p ng-message="required" class="message">Please provide your email address.</p>
              </div>
          </div>
        </div>        
        <div class="form-group" ng-class="{ 'has-error': contactForm.message.$touched && contactForm.message.$invalid }">
          <label for="message" class="col-sm-2 control-label">Message</label>
          <div class="col-sm-10">
            <textarea name="message" class="form-control" ng-model="formData.message" ng-minlength="10" ng-maxlength="1000" rows="10" required></textarea>
              <div ng-messages="contactForm.message.$error" class="my-messages">
                <p ng-message="minlength" class="message">Your message should be more than 10 characters.</p>
                <p ng-message="maxlength" class="message">Your message should be less than 1,000 characters.</p>
                <p ng-message="required" class="message">Tell us how we can help you.</p>
              </div>
          </div>
        </div>
        <div class="form-group" ng-hide="contactForm.name.$invalid || contactForm.email.$invalid || contactForm.message.$invalid">
          <div class="col-sm-offset-2 col-sm-10">      
            <input type="submit" value="Send!" name="submit">
          </div>
        </div>
        <div class="form-group">      
          <div ng-class="{'submissionMessage' : submission}" ng-bind="submissionMessage">
          </div>
        </div>
      </form>
      <!-- END FORM-->
    </div>
  </div>
</div>